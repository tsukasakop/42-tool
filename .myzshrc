# Aliases
alias ll='ls -alG'
alias lr='ls -lR'
alias lra='ls -lRa'

alias 42cd='cd $FT_TOOL && cd ..'
alias 42ur=$FT_TOOL'/open_url.sh'
alias 42cc='cc -Wall -Wextra -Werror -fsanitize=address'
alias 42cce='f(){cc -Wall -Wextra -Werror -fsanitize=address $@ &&./a.out && rm ./a.out;}; f'
aluas 42nmh='find . -name "*.h" | norminette -R CheckDefine'
alias 42nmc='find . -name "*.c" | norminette -R CheckForbiddenSourceHeader'
alias 42nm='find . -name "*.c" | norminette -R CheckForbiddenSourceHeader \ find . -name "*.h" | norminette -R CheckDefine'
