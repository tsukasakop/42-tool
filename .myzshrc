# Aliases
alias ll='ls -alG'
alias lr='ls -lR'
alias lra='ls -lRa'

alias 42cd='cd $FT_TOOL && cd ..'
alias 42nmh='norminette -R CheckDefine'
alias 42nmc='norminette -R CheckForbiddenSourceHeader'
alias 42nm='norminette -R CheckForbiddenSourceHeader -R CheckDefine'

# cc utils
alias ccw='cc -Wall -Wextra -Werror'
alias ccf='cc -Wall -Wextra -Werror -fsanitize=address'
cce()
{
    cat | eval "${CC:-cc} -x c -" || return $?
    ./a.out
    local st=$?
    rm ./a.out
    return st
}

# url function
url() {open $(jq -r --arg key "$1" '.[$key] // empty' "${FT_TOOL}/url.json")}
url-l(){less ${FT_TOOL}/url.json}
url-a(){jq '. + {"'$1'": "'$2'"}' ${FT_TOOL}/url.json > ${FT_TOOL}/tmp.json && mv ${FT_TOOL}/tmp.json ${FT_TOOL}/url.json}
42reboot(){echo "/reboot c${1:0:1}r${1:1:1}s${1:2:1}" | pbcopy; url reboot}

# git function
git-extract(){git show $1:$2 > $2}
