# Aliases
alias ll='ls -alG'
alias lr='ls -lR'
alias lra='ls -lRa'

alias 42home='cd $FT_TOOL && cd ..'
alias 42url=$FT_TOOL'/open_url.sh'
alias 42cc='cc -Wall -Wextra -Werror -fsanitize=address'
alias 42ce='f(){cc -Wall -Wextra -Werror -fsanitize=address $@ &&./a.out && rm ./a.out;}; f'
alias 42nmcfs='norminette -R CheckForbiddenSourceHeader'
alias 42nmcd='norminette -R CheckDefine'

